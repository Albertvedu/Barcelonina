<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fotoPortada"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/portada"
    android:alpha="1">


    <TextView
        android:id="@+id/barceloninatitulo"
        android:layout_width="274dp"
        android:layout_height="94dp"
        android:layout_marginTop="16dp"
        android:alpha="1.0"
        android:fontFamily="@font/condiment"
        android:text="Barcelonina"

        android:textSize="60dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.482"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.19999999" />

    <TextView
        android:id="@+id/textoPagina"
        android:layout_width="163dp"
        android:layout_height="49dp"
        android:layout_marginBottom="240dp"
        android:fontFamily="@font/condiment"
        android:text="Private guide"
        android:textSize="25dp"
        app:layout_constraintBottom_toTopOf="@+id/explorarTours"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/barceloninatitulo"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/explorarTours"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="100dp"
        android:text="Explorer ours tours"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.47"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tectoPagina"
        app:layout_constraintVertical_bias="0.32999998" />

</androidx.constraintlayout.widget.ConstraintLayout>